<div class="x_content">
  <% modal ||= false %>
  <% remote = modal ? true : false %>
  <%= form_for(@event, remote: remote, html: {:class => "form-horizontal form-label-left",:novalidate=>"novalidate",role: :form, 'data-model' => 'event'}) do |f| %>
      <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="website">Title<span class="required">*</span>

        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= f.text_field :title, autofocus: true,:class=>'form-control' , :required =>'required',:placeholder=>"Title" %>
        </div>

        <% if @event.errors[:title].present? %>
            <ul class="parsley-errors-list filled" id="parsley-id-2042"><li class="parsley-required">This value is required.</li></ul>
        <% end %>
      </div>
      <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">Description <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= f.text_field :description,:class=>'form-control' , :required =>'required',:placeholder=>"Description" %>
        </div>
        <% if @event.errors[:description].present? %>
            <ul class="parsley-errors-list filled" id="parsley-id-2042"><li class="parsley-required">This value is required.</li></ul>
        <% end %>
      </div>
      <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">Start <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= f.date_field :start,:class=>'form-control' , :required =>'required',:placeholder=>"Start Date" %>
        </div>
        <% if @event.errors[:start].present? %>
            <ul class="parsley-errors-list filled" id="parsley-id-2042"><li class="parsley-required">This value is required.</li></ul>
        <% end %>
      </div>
      <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">Start <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= f.date_field :end,:class=>'form-control' , :required =>'required',:placeholder=>"End Date" %>
        </div>
        <% if @event.errors[:end].present? %>
            <ul class="parsley-errors-list filled" id="parsley-id-2042"><li class="parsley-required">This value is required.</li></ul>
        <% end %>
      </div>
      <div class="ln_solid"></div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
          <!--<button type="submit" class="btn btn-primary">Cancel</button>-->
          <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
          <button id="send" type="submit" class="btn btn-success">Submit</button>
        </div>
      </div>
  <% end %>

</div>
