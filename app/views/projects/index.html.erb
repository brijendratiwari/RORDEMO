<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>
          Project's
          <!--<small>-->
            <!--list-->
          <!--</small>-->
        </h3>
      </div>

      <div class="title_right">

      </div>
    </div>
    <div class="clearfix"></div>
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2> <%= link_to 'New Project', new_project_path ,:class => "btn btn-primary btn-sm" %></h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table id="example" class="table table-striped responsive-utilities jambo_table">
              <thead >
              <tr class="headings">
                <th>Project Name</th>
                <th>Created By</th>
                <th>Members</th>
                <th>Description</th>
                <th>Start date</th>
                <th>Estimeted end date</th>
                <th class=" no-link last"><span class="nobr">Action</span></th>
              </tr>
              </thead>

              <tbody>
              <% @projects.each do |project| %>
                  <tr class="even pointer">
                    <td>
                      <a><%= project.name %></a>
                      <br>
                      <small>Created <%= project.created_at.strftime("%B %d, %Y") %></small>
                    </td>
                    <td><%= project.user.firstname.titleize %> <%= project.user.lastname %></td>
                    <td>
                      <ul class="list-inline">
                        <% project.users.each do |members| %>
                        <li>
                          <img alt="Avatar" class="avatar" src="<%= members.avatar.url %>">
                        </li>
                            <% end %>
                      </ul>
                    </td>

                    <td><%= project.description %></td>
                    <td><%= project.start_date %></td>
                    <td><%= project.estimeted_end_date %></td>

                    <td class=" last">
                             <%= link_to 'Project Detail', project, :class => 'btn btn-xs btn-primary' %>
                      <%= link_to 'Task List',tasks_path(id: project.id) , :class => 'btn btn-xs btn-warning' %>
                      <% if project.users_id == current_user.id %>
                   <%= link_to 'Edit', edit_project_path(project),:class => 'btn btn-xs btn-success' %>
                    <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-xs btn-danger' %></td>
                  <% end %>
                          </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- footer content -->
  <footer>
    <div class="">
      <p class="pull-right">Gentelella Alela! a Bootstrap 3 template by <a>Kimlabs</a>. |
        <span class="lead"> <i class="fa fa-paw"></i> Gentelella Alela!</span>
      </p>
    </div>
    <div class="clearfix"></div>
  </footer>
  <!-- /footer content -->
</div>
